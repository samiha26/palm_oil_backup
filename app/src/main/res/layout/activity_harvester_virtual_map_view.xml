<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="800dp"
        android:paddingBottom="24dp"
        tools:context=".HarvesterVirtualMapView">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Virtual Map"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/plotIdText"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:text="Plot ID"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <FrameLayout
        android:id="@+id/mapCanvasContainer"
        android:layout_width="351dp"
        android:layout_height="425dp"
        android:layout_margin="16dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow">

    </FrameLayout>

        <TextView
            android:id="@+id/pathwayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="Pathway:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mapCanvasContainer" />

        <TextView
            android:id="@+id/pathwayText"
            android:layout_width="349dp"
            android:layout_height="93dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="A → B → C → D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapCanvasContainer"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plotIdText">

    </LinearLayout>

    <Button
        android:id="@+id/button3D"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:text="2D"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/mapCanvasContainer"
        app:layout_constraintStart_toEndOf="@+id/button3D3" />

        <Button
            android:id="@+id/button3D5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="118dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:text="Current Location"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonRow"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3D3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:text="1D"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/buttonRow"
        app:layout_constraintStart_toEndOf="@+id/button3D5" />

    <Button
        android:id="@+id/button3D6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:text="3D"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/mapCanvasContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toEndOf="@+id/button3D" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
