<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".MainActivity">

    <!-- DJI connection status (small, non-invasive placeholder) -->
    <TextView
        android:id="@+id/text_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DJI: Disconnected"
        android:textColor="#1C6B43"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Connected product info (model/name) -->
    <TextView
        android:id="@+id/text_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model: N/A"
        android:textColor="#666666"
        android:textSize="14sp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_connection_status"
        app:layout_constraintStart_toStartOf="@id/text_connection_status"
        app:layout_constraintEnd_toEndOf="@id/text_connection_status"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonH"
        android:layout_width="280dp"
        android:layout_height="85dp"
        android:backgroundTint="#1C6B43"
        android:text="Harvester"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonR"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/buttonR"
        android:layout_width="280dp"
        android:layout_height="85dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#1C6B43"
        android:text="Reconnaissance"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonH"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonH"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
